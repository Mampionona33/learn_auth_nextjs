generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UsersAddress {
  city        String
  geolocation UsersAddressGeolocation
  number      Int
  street      String
  zipcode     String
}

type UsersAddressGeolocation {
  lat  String
  long String
}

type UsersName {
  firstname String
  lastname  String
}

model classe {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  level String @db.ObjectId
  name  String
  study String @db.ObjectId
}

model groupe {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  id_  Int    @map("id")
  name String
}

model groupe_permission {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  groupe     String @db.ObjectId
  permission String @db.ObjectId
}

model level {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model permission {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  slug String
}

model study {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}

model users {
  id       String        @id @default(auto()) @map("_id") @db.ObjectId
  v        Int?          @map("__v")
  address  UsersAddress?
  email    String        @unique
  groupe   String?       @db.ObjectId
  id_      Int?          @map("id")
  name     UsersName
  password String?
  phone    String?
  username String        @unique
}
